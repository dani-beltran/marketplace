// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/lib/prisma-client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                    Int        @id @default(autoincrement())
  email                 String     @unique
  name                  String?
  role                  String
  password              String
  contractsAsContractor Contract[] @relation("contractor")
  contractsAsClient     Contract[] @relation("client")
  createdAt             DateTime   @default(now())
  updatedAt             DateTime   @default(now()) @updatedAt
  deletedAt             DateTime?
}

model Contract {
  id           Int       @id @default(autoincrement())
  name         String
  contractor   User      @relation("contractor", fields: [contractorId], references: [id])
  contractorId Int
  client       User      @relation("client", fields: [clientId], references: [id])
  clientId     Int
  jobs         Job[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @default(now()) @updatedAt
  deletedAt    DateTime?
}

model Job {
  id         Int       @id @default(autoincrement())
  name       String
  contract   Contract  @relation(fields: [contractId], references: [id])
  contractId Int
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @default(now()) @updatedAt
  deletedAt  DateTime?
}
